<UserControl x:Class="DesignPatterns.GUI_WPF.Views.AdapterUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesignPatterns.GUI_WPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Canvas Margin="0,20" Grid.Column="1" x:Name="CanvasContent" />
        <StackPanel Grid.Column="0">
            <Button Margin="10" Height="70" Width="70" x:Name="LineButton" Click="LineButton_Click">Line</Button>
            <Button Margin="10" Height="70" Width="70" x:Name="CircleButton" Click="CircleButton_Click">Circle</Button>
            <Button Margin="10" Height="70" Width="70" x:Name="TextBoxButton" Click="TextBoxButton_Click">Text Box</Button>
            <Button Margin="10" Height="70" Width="70" x:Name="ClearItemsButton" Click="ClearItemsButton_Click" Foreground="Red">Clear</Button>
        </StackPanel>
    </Grid>
</UserControl>
